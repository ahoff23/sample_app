<li id="<%= feed_item.id %>">
	<!--Start with a gravatar image of the user linking to that specific feed_item-->
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<!--Span that includes the user's name linking to the feed item of the user-->
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<!--Then have a span with the content of the feed_item-->
	<span class="content"><%= feed_item.content %></span>
	<!--Finish with a span containing the time the message was created-->
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<!--Delete button for microposts belonging to the user-->
	<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
	<% end %>
</li>