<!--@title created n the calling function found in the user controller-->
<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<!--Display the user's gravatar in a side bar-->
			<%= gravatar_for @user %>
			<h1><%= @user.name %></h1>
			<span><%= link_to "view my profile", @user %></span>
			<span><b>Microposts:</b><%= @user.microposts.count %></span>
		</section>
		<section>
			<!--Renders follower and following counts for @user-->
			<%= render 'shared/stats' %>
			<!--Renders a small section containing gravatars of followers/followed users-->
			<% if @users.any? %>
				<div class="user_avatars">
					<% @users.each do |user| %>
						<!--Gravatar image for each follwing/followed user-->
						<%= link_to gravatar_for(user, size: 30), user %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<ul class="users">
				<%= render @users %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>
