<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "sample app", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home",	root_path %></li>
					<li><%= link_to "Help",	help_path %></li>
					<!--These links change depending on whether or not the user is currently signed in-->
					<% if signed_in? %>
						<li><%= link_to "Users", '#' %></li>
						<!--This list element is a dropdown menu for "Account"-->
						<!--FOR DROPDOWN MENUS YOU MUST ADD BOOTSTRAP'S JAVASCRIPT LIBRARY
						SEE APPLICATION.JS. COMMENTED WITH "ADD BOOTSTRAP JAVASCRIPT LIBRARY"-->
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
							<!--Elements in the dropdown menu-->
							<ul class="dropdown-menu">
								<li><%= link_to "Profile", current_user %></li>
								<li><%= link_to "Settings", '#' %></li>
								<!--Divider in the dropdown menu before the 'Sign Out' option-->
								<li class="divider"></li>
								<li><%= link_to "Sign out", signout_path, method: "delete" %></li>
							</ul>
						</li>
					<!--Else statement: For users not logged in-->
					<% else %>
						<li><%= link_to "Sign in", signin_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>